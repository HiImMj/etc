  var lastSelection;

            function editRow(id) {
                if (id && id !== lastSelection) {
                    var grid = $("#jqGrid");
                    grid.jqGrid('restoreRow',lastSelection);
                    grid.jqGrid('editRow',id, {keys: true} );
                    lastSelection = id;
                }
            }


  var newWidth = $("#list47_note").width() + $("#list47_etc").outerWidth(true);
    alert(newWidth);

  $grid.jqGrid("setLabel", "note", "TEST", "", {
        style: "width: " + newWidth + "px;",
      colspan: "2"
  });
  $grid.jqGrid("setLabel", "etc", "", "", {style: "display: none"});


